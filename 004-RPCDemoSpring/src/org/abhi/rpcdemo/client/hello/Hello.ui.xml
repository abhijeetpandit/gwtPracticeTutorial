<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	.border {
		border: 1px solid red;
    }
	</ui:style>
	<g:HTMLPanel>
		
		<g:DockLayoutPanel styleName="{style.border}">
			<g:north size="100">
				<g:TextBox ui:field="textBox" styleName="{style.border}"/>
			</g:north>
			<g:north size="100" >
			<g:Button  text="Click me!!!" ui:field="button"></g:Button>
			</g:north>
		</g:DockLayoutPanel>
		
	</g:HTMLPanel>
</ui:UiBinder> 